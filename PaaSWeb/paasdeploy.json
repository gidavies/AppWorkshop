{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AppName": {
            "type": "string",
            "defaultValue": "",
             "metadata": {
                 "description": "The name of the App Service."
             }
         },
         "AppServicePlan": {
            "type": "string",
            "defaultValue": "",
             "metadata": {
                 "description": "The name of the App Service Plan."
             }
         },
        "PricingTier": {
            "type": "string",
            "defaultValue": "S1",
            "allowedValues": [
            "F1",
            "D1",
            "B1",
            "B2",
            "B3",
            "S1",
            "S2",
            "S3",
            "P1",
            "P2",
            "P3",
            "P4"
            ],
            "metadata": {
                "description": "The pricing tier for the App Service Plan. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
            }
        },
        "FailoverRegion": {
            "type": "string",
            "defaultValue": "UK West",
            "allowedValues": [
                "East Asia",
                "Southeast Asia",
                "Central US",
                "East US",
                "East US 2",
                "West US",
                "North Central US",
                "South Central US",
                "North Europe",
                "West Europe",
                "Japan West",
                "Japan East",
                "Brazil South",
                "Australia East",
                "Australia Southeast",
                "South India",
                "Central India",
                "West India",
                "Canada Central",
                "Canada East",
                "UK South",
                "UK West",
                "West Central US",
                "West US 2",
                "Korea Central",
                "Korea South",
                "France Central",
                "France South",
                "Australia Central",
                "Australia Central 2",
                "UAE Central",
                "UAE North",
                "South Africa North",
                "South Africa West",
                "Switzerland North",
                "Switzerland West",
                "Germany North",
                "Germany West Central",
                "Norway West",
                "Norway East"
                ],
             "metadata": {
                 "description": "The region to locate the App Service Plan and App Service."
             }
         },
        "RepoURL": {
            "type": "string",
            "defaultValue": "https://github.com/gidavies/AppWorkshop.git",
            "metadata": {
                "description": "The URL for the repo that contains the project to deploy."
            }
        },
        "Branch": {
            "type": "string",
            "defaultValue": "master",
            "metadata": {
                "description": "The branch of the repo to use."
            }
        },
        "DatabaseConnectionString": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The connection string for Azure SQL."
            }
        }
    },
    "resources": [
      {
        "apiVersion": "2018-02-01",
        "name": "[parameters('AppServicePlan')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[parameters('FailoverRegion')]",
        "tags": {
          "displayName": "HostingPlan"
        },
        "sku": {
          "name": "[parameters('PricingTier')]",
          "capacity": 1
        },
        "properties": {
          "name": "[parameters('AppServicePlan')]"
        }
      },
      {
        "apiVersion": "2018-02-01",
        "name": "[parameters('AppName')]",
        "type": "Microsoft.Web/sites",
        "location": "[parameters('FailoverRegion')]",
        "dependsOn": [
          "[parameters('AppServicePlan')]"
        ],
        "tags": {
            "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('AppServicePlan')))]": "empty",
            "displayName": "Website"
        },
        "properties": {
          "name": "[parameters('AppName')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('AppServicePlan'))]"
        },
        "resources": [
            {
                "apiVersion": "2018-02-01",
                "type": "sourcecontrols",
                "name": "web",
                "location": "[parameters('FailoverRegion')]",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites', parameters('AppName'))]"
                ],
                "properties": {
                    "repoUrl": "[parameters('RepoURL')]",
                    "branch": "[parameters('Branch')]",
                    "isManualIntegration": true
                }
            },
            {
                "apiVersion": "2018-02-01",
                "type": "config",
                "name": "connectionstrings",
                "dependsOn": [
                    "[parameters('AppName')]"
                ],
                "properties": {
                    "DefaultConnection": {
                    "value": "[parameters('DatabaseConnectionString')]",
                    "type": "SQLAzure"
                }
            }
          }
        ]
      }
    ]
  }